{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "checkJs": false,
        "jsx": "react-jsx",
        "outDir": "./build",
        "rootDir": "./src",
        "removeComments": true,
        "noEmit": true,
        "pretty": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
            "./src/",
            "./src/pages/",
            "./src/components/"
    ],
    "exclude": [
        "node_modules"
    ]
}